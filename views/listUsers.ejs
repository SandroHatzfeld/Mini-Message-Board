<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title><%= title%></title>
  </head>
  <body>
    <div class="messages-wrapper">
      <h1><%= title%></h1>
      <form action="/users/search" method="get" style="display: inline">
        <input type="text" name="searchQuery" id="searchQuery" />
        <button type="submit">Search</button>
      </form>
      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <ul class="errors">
        <% errors.forEach(function(error) { %>
        <li><%= error %></li>
        <% }) %>
      </ul>
      <% } %>
      <ul class="user-list">
        <% if (locals.users) {%> <% users.forEach(user => { %>
        <li>
          <a href="/users/<%= user.id %>/details"
            >ID: <%= user.id %>, Name: <%= user.firstName%> <%=
            user.lastName%></a
          >
          <div class="user-list-buttons">
            <a class="btn" href="/users/<%= user.id %>/update">Update</a>
            <form
              action="/users/<%= user.id%>/delete"
              method="post"
              
            >
              <button
                class="btn btn-danger"
                type="submit"
                onclick="return confirm('Are you sure you want to delete this user?')"
              >
                Delete
              </button>
            </form>
          </div>
        </li>
        <% }) %> <% } %>
      </ul>
      <a href="/users/create" class="btn">Create new user</a>
    </div>
  </body>
</html>
